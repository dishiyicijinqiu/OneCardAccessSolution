<UserControl x:Class="DNBSoft.WPF.RibbonControl.ApplicationMenuButtonPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:DNBSoft.WPF.RibbonControl"
    MinHeight="23" Width="295" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <ribbon:RibbonBorder BorderThickness="1" BorderBrush="Black" x:Name="masterBorder" Background="White" CornerRadius="3">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="theStack">
                <Grid Height="23" Name="headerBarGrid">
                    <Label Name="headerLabel" Margin="0,0,0,-10" FontWeight="Bold">Default</Label>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </ribbon:RibbonBorder>
</UserControl>
