    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:DNBSoft.WPF.RibbonControl"
    Height="20" Width="20" Margin="1,0,1,0">
    <Grid>
        <ribbon:RibbonBorder x:Name="theBorder" CornerRadius="3" BorderThickness="1" BorderBrush="Black">
            <Image Name="theImage" Width="16" Height="16"></Image>
        </ribbon:RibbonBorder>    
    </Grid>
</UserControl>
