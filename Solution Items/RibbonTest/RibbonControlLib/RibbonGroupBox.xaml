<local:RibbonControlBase x:Class="DNBSoft.WPF.RibbonControl.RibbonGroupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DNBSoft.WPF.RibbonControl"
    xmlns:ribbon="clr-namespace:DNBSoft.WPF.RibbonControl"
    Height="88" Width="auto" BorderThickness="1" x:Name="RibbonGroupBox2">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>

        <ribbon:RibbonBorder BorderThickness="0.5,0.5,0.5,0" Grid.Row="0"
                CornerRadius="3,3,0,0"  Margin="0.5,0,0.5,0" x:Name="mainBorder">
            <StackPanel Name="contentStackPanel" MinHeight="80" Orientation="Horizontal"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle Width="1" Fill="Transparent" Height="81" />
            </StackPanel>
        </ribbon:RibbonBorder>

        <ribbon:RibbonBorder BorderThickness="0.5,0,0.5,0.5" Grid.Row="1"
                CornerRadius="0,0,3,3" Margin="0.5,0,0.5,0" x:Name="labelBorder">
            <Grid Name="labelGrid">
                <Label Margin="0,-5,0,-12" Height="32" HorizontalAlignment="Center" Name="titleLabel">
                    RibbonGroupBox Title
                </Label>
            </Grid>
        </ribbon:RibbonBorder>
    </Grid>
</local:RibbonControlBase>
