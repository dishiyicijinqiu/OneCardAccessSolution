<UserControl x:Class="DNBSoft.WPF.RibbonControl.RibbonSelectionButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:DNBSoft.WPF.RibbonControl"
    Height="22" MinWidth="15" Margin="2,3,2,0" MouseDoubleClick="UserControl_MouseDoubleClick">
    
    <Grid>
        <src:RibbonBorder BorderThickness="1,1,1,0" CornerRadius="5,5,0,0" x:Name="theBorder" 
                MouseDown="Border_MouseDown" BorderBrush="Black">
            <Label VerticalAlignment="Top" HorizontalAlignment="Center" 
                   Name="titleLabel" Margin="3,-3,3,0" Height="27">
                Default
            </Label>
        </src:RibbonBorder>
    </Grid>
</UserControl>
