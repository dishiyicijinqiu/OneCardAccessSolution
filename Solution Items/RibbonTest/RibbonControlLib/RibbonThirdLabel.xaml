<src:RibbonControlBase x:Class="DNBSoft.WPF.RibbonControl.RibbonThirdLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:DNBSoft.WPF.RibbonControl"
    Height="21" MinWidth="21" Margin="1.5,0,1.5,0">
    
    <Grid Name="RibbonThirdLabel2">
        <src:RibbonBorder x:Name="theBorder" CornerRadius="5" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Name="contentStackPanel">
                <Image Name="imagePanel" Width="0" Height="0" Margin="0,0,0,0"></Image>
                <Label Name="label" Width="0" Height="30" Margin="0,-4,0,0" FontSize="11" />
                <Label Name="contextArrow" Grid.Row="1" Margin="0,-3,0,0" 
                       HorizontalAlignment="Center"  
                       FontFamily="Webdings" 
                       Height="21" VerticalAlignment="Center" Width="0">
                    6
                </Label>
            </StackPanel>
        </src:RibbonBorder>
    </Grid>
</src:RibbonControlBase>
