<src:RibbonControlBase x:Class="DNBSoft.WPF.RibbonControl.RibbonThreeRowsLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:DNBSoft.WPF.RibbonControl"
    Height="65" MinWidth="10" Margin="0,1,1,1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Name="topGrid" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" Name="middleGrid"  />
        <StackPanel Orientation="Horizontal" Grid.Row="4" Name="bottomGrid" />
    </Grid>
</src:RibbonControlBase>
