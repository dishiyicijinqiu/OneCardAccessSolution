    <!-- Outer border -->
    <src:RibbonBorder x:Name="backgroundBorder">
        
        <!-- border grips -->
        <Grid Name="resizeGrid" Width="auto" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="0"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="0"></RowDefinition>
            </Grid.RowDefinitions>
            
            <!-- Grips -->
            <!-- Sides -->
            <Rectangle Grid.Column="0" Grid.Row="1" Name="leftSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="2" Grid.Row="1" Name="rightSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="1" Grid.Row="0" Name="topSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="1" Grid.Row="2" Name="bottomSizeGrip" Fill="Transparent" />
            <!-- Corners -->
            <Rectangle Grid.Column="0" Grid.Row="0" Name="topLeftSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="2" Grid.Row="2" Name="bottomRightSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="2" Grid.Row="0" Name="topRightSizeGrip" Fill="Transparent" />
            <Rectangle Grid.Column="0" Grid.Row="2" Name="bottomLeftSizeGrip" Fill="Transparent" />

            <!-- inside border -->
            <Grid Name="windowMaster" Grid.Row="1" Grid.Column="1">
                <DockPanel>
                    
                    <!-- window headder stuff, title bar + ribbon -->
                    <StackPanel DockPanel.Dock="Top">
                        <!-- Title bar -->
                        <Grid Background="Aqua" Name="TitleBar" 
                      MouseDown="TitleBar_MouseDown" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                            <DockPanel Name="titleBarDock">

                                <!-- quick access toolbar -->
                                <!-- qat:QuickAccessToolbar Name="qatoolbar" Grid.Column="0" 
                                         Margin="40,0,0,0" DockPanel.Dock="Left"/ -->

                                <!-- close, min, max title buttons -->
                                <StackPanel Orientation="Horizontal" 
                            FlowDirection="RightToLeft" Margin="0,-1,0,0" DockPanel.Dock="Right">
                                    <Button Width="43" Height="20" Name="closeButton"
                        Click="closeButton_Click" MouseEnter="closeButton_MouseEnter"
                        MouseLeave="closeButton_MouseLeave"
                        Style="{DynamicResource CloseButtonStyle}" Margin="5,0,0,0">
                                        X
                                    </Button>
                                    <Button Width="25" Height="20" Name="maximiseButton"
                        Click="maximiseButton_Click"
                        MouseEnter="maximiseButton_MouseEnter" MouseLeave="maximiseButton_MouseLeave"
                        Style="{DynamicResource MaximiseButton}" Margin="5,0,0,0">
                                        #
                                    </Button>
                                    <Button Width="25" Height="20" Name="minimiseButton"
                        Click="minimiseButton_Click"
                        MouseEnter="minimiseButton_MouseEnter" MouseLeave="minimiseButton_MouseLeave"
                        Style="{DynamicResource MinimiseButton}" Margin="5,0,0,0">
                                        _
                                    </Button>
                                </StackPanel>

                                <!-- title bar label -->
                                <Label Grid.Column="1" HorizontalAlignment="Center" 
                   VerticalAlignment="Top" FontSize="14" Margin="0,-1,0,0"
                   Name="titleLabel">
                                    <Label.BitmapEffect>
                                        <OuterGlowBitmapEffect x:Name="titleLabelEffect" GlowColor="White" />
                                    </Label.BitmapEffect>
                                    Title
                                </Label>

                            </DockPanel>
                        </Grid>

                        <!-- Ribbon control bar -->
                        <Grid Name="ribbonTitleBackground">
                            <Grid Margin="60,0,0,0" Name="titleHook" />
                        </Grid>

                        <!-- Ribbon -->
                        <Grid Name="ribbonBorderWrapperGrid">
                            <src:RibbonBorder BorderThickness="1" CornerRadius="5"
                                Margin="2, 0, 2, 2" x:Name="ribbonBorder">
                                <!-- <src:RibbonBorder.BitmapEffect>
                                    <DropShadowBitmapEffect ShadowDepth="1" Softness="0.75" />
                                </src:RibbonBorder.BitmapEffect> -->
                                <Grid Name="ribbonGrid" VerticalAlignment="Top"/>
                            </src:RibbonBorder>
                        </Grid>
                    </StackPanel>

                    <!-- Content Panel -->
                    <Grid Name="contentPanel" Background="Fuchsia" />
                </DockPanel>
            </Grid>

            <Grid Name="windowMasterGrid" Margin="0" Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition MinHeight="0" MaxHeight="92"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <!-- start button -->
                <Grid Grid.Row="0" Grid.RowSpan="2" Name="applicationButtonHook" 
                      Width="50" Height="50" HorizontalAlignment="Left" Background="Transparent" Margin="3"/>
            </Grid>
        </Grid>
    </src:RibbonBorder>
</Window>
