<Window xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <local:BaseGridControl x:Name="grid" AutoGenerateColumns="RemoveOld"  >
            <local:BaseGridControl.View>
                <dxg:TableView AllowFilterEditor="True" AllowColumnFiltering="True" ShowAutoFilterRow="True">

                </dxg:TableView>
            </local:BaseGridControl.View>
        </local:BaseGridControl>
    </Grid>
</Window>
